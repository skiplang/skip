  mutable fun emitIntern{
    value: InstrID,
    typ: Type,
    pos: Pos,
    prettyName: String = "",
  }: Instr {
    if (!this.getScalarType(typ).isGCPointer()) {
      // Not internable, e.g. Int, so just return the value unchanged.
      this.getInstr(value)
    } else {
      this.emitStmt(Intern{value, typ, pos, id => this.iid(), prettyName})
    }
  }

