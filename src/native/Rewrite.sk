  mutable fun emitCast{
    value: InstrID,
    typ: Type,
    pos: Pos,
    prettyName: String = "",
  }: Instr {
    v = this.getInstr(value);
    if (v.typ == typ) {
      // Do nothing for no-op casts.
      v
    } else {
      this.emitStmt(Cast{value, typ, pos, id => this.iid(), prettyName})
    }
  }

